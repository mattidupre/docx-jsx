{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "./dist",
    "types": ["vitest/importMeta"]
  },
  "declarationMap": true,
  "include": ["./src/**/*"]
}
